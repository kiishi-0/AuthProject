@model AuthProject.Models.VMLogin
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />    
    <title>Login</title>
</head>
<body>
    <form asp-controller="Access" asp-action="Login" method"post">
        <h1>Login</h1>
        <input type="email" placeholder="Email" asp-for="Email" />
        <input type="password" placeholder="Password" asp-for="Password" />
        <label>
            <input type="checkbox" asp-for="KeepLoggedIn"/>
            Keep me logged in
        </label>

        <button type="submit">Login</button>

        @if(ViewData["ValidateMessage"] != null)
        {
            <br />
            <br />
            <label>@ViewData["ValidateMessage"]</label>
        }
    </form>
</body>
</html>
